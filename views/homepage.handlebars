<!-- Loop over each object in the posts array -->
{{#each post as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        {{post.title}}
      </h2>

      <p>Created by
        {{post.user.username}}
        on
        {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">

    </div>
  </div>
{{/each}}